{
  "name": "@flyerhq/react-native-chat-ui",
  "version": "0.4.3",
  "description": "React Native Chat UI",
  "homepage": "https://github.com/flyerhq/react-native-chat-ui#readme",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Oleksandr Demchenko <alexdemchenko@yahoo.com>",
  "contributors": [
    "Vitalii Danylov <vitaliidanylov1992@gmail.com>"
  ],
  "license": "MIT",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "compile": "rm -rf lib && tsc -p . && copyup src/assets/*.png lib",
    "lint": "eslint .",
    "prepare": "yarn compile",
    "test": "jest",
    "type-coverage": "type-coverage"
  },
  "dependencies": {
    "@flyerhq/react-native-keyboard-accessory-view": "^1.5.1",
    "@flyerhq/react-native-link-preview": "^1.0.5",
    "dayjs": "^1.9.1",
    "react-native-image-viewing": "^0.2.0",
    "react-native-parsed-text": "^0.0.22"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/runtime": "^7.11.2",
    "@react-native-community/eslint-config": "^2.0.0",
    "@testing-library/react-native": "^7.0.2",
    "@types/jest": "^26.0.14",
    "@types/react-native": "^0.63.19",
    "@types/react-test-renderer": "^16.9.3",
    "babel-jest": "^26.3.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.9.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "jest": "^26.4.2",
    "metro-react-native-babel-preset": "^0.63.0",
    "react": "^16.13.1",
    "react-native": "^0.63.2",
    "react-native-safe-area-context": "^3.1.8",
    "react-test-renderer": "^16.13.1",
    "type-coverage": "^2.13.0",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/index.{ts,tsx}",
      "!**/styles.{ts,tsx}",
      "!**/types.{ts,tsx}",
      "!**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "preset": "react-native",
    "setupFiles": [
      "./jest/setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@flyerhq|react-native))"
    ]
  },
  "typeCoverage": {
    "cache": true,
    "ignoreCatch": true,
    "is": 100,
    "strict": true
  }
}
